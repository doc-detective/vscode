{
  "name": "test-runner",
  "displayName": "Doc Detective",
  "publisher": "DocDetective",
  "description": "View Doc Detective tests for active files.",
  "version": "0.0.13",
  "sponsor": {
    "url": "https://github.com/sponsors/doc-detective"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "activationEvents": [
    "onCommand:doc-detective-vsc.helloWorld",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": ".doc-detective-test-runner.helloWorld",
        "title": "Hello World"
      },
      {
        "command": ".doc-detective-test-runner.rootFolder",
        "title": "Doc Detective Test Runner: Select Root Folder"
      },
      {
        "command": "docDetectiveTestRunner.clearRootFolder",
        "title": "Doc Detective Test Runner: Clear Root Folder"
      }
    ],
    "configuration": {
      "title": "Doc Detective",
      "properties": {
        "docDetectiveTestRunner.configPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Doc Detective configuration file. If not specified, the extension looks for .doc-detective.json, .doc-detective.yaml, or .doc-detective.yml in the workspace root."
        }
      }
    },
    "menus": {
      "view/title": []
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "docDetectiveSidebar",
          "title": "Doc Detective",
          "icon": "media/dd-mono.png"
        }
      ]
    },
    "views": {}
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/doc-detective/vscode.git"
  },
  "license": "AGPL-3.0-only",
  "scripts": {
    "compile": "tsc -p ./",
    "compile-tests": "tsc -p ./",
    "lint": "eslint src",
    "pretest": "npm run compile-tests && npm run lint",
    "test": "node ./out/test/runTest.js",
    "watch": "tsc -p ./ -w",
    "watch-tests": "tsc -p ./ -w",
    "package": "npm run compile",
    "vscode:prepublish": "npm run package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.0.3",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.32.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "doc-detective": "^3.1.1",
    "eslint": "^9.29.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/vsce": "^3.4.2",
    "doc-detective-resolver": "^3.1.1",
    "js-yaml": "^4.1.0",
    "sinon": "^21.0.0"
  }
}