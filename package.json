{
  "name": "doc-detective-vsc",
  "displayName": "doc-detective-vsc",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {    "commands": [
      {
        "command": "doc-detective-vsc.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "doc-detective-vsc.refresh",
        "title": "Refresh Doc Detective Panel",
        "icon": "$(refresh)"
      },
      {
        "command": "doc-detective-vsc.simpleView",
        "title": "Use Simple View",
        "icon": "$(list-flat)"
      }
    ],    "menus": {
      "view/title": [
        {
          "command": "doc-detective-vsc.refresh",
          "when": "view == docDetectiveView",
          "group": "navigation"
        },
        {
          "command": "doc-detective-vsc.simpleView",
          "when": "view == docDetectiveView",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "docDetectiveSidebar",
          "title": "Doc Detective Panel",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "docDetectiveSidebar": [
        {
          "id": "docDetectiveView",
          "name": "Doc Detective Side Panel",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.15.21",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.27.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "doc-detective-resolver": "^3.0.0",
    "js-yaml": "^4.1.0"
  }
}
